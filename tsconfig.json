{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "noImplicitAny": true,
    "target": "ES5",
    "module": "CommonJS",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
